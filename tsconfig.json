{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./",
        "paths": {
            "@app/*": ["app/*"],
            "@pages/*": ["pages/*"],
            "@widgets/*": ["widgets/*"],
            "@features/*": ["features/*"],
            "@entities/*": ["entities/*"],
            "@shared/*": ["shared/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "target": "ES2017"
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
